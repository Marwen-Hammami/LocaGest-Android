<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="right"
    app:cardBackgroundColor="@color/main_color"><!-- Changer avec le code to primary et left -->

    <LinearLayout
        android:id="@+id/messageLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="9dp"
        android:gravity="right"><!-- Changer avec le code to left -->


        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/normal"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/a_image1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/loading_image" />

        <LinearLayout
            android:id="@+id/b_layout"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/b_image1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/loading_image" />

            <ImageView
                android:id="@+id/b_image2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/loading_image" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_layout"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/c_image1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/loading_image" />

            <ImageView
                android:id="@+id/c_image2"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/loading_image" />

            <ImageView
                android:id="@+id/c_image3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/loading_image" />
        </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>