<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/context_view"
    tools:context=".ui.ReservationActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir la date de début" />


        <Button
            android:id="@+id/btn_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir l'heure de début"
            android:layout_marginTop="16dp"/>


        <Button
            android:id="@+id/btn_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir la date de fin"
            android:layout_marginTop="16dp"/>


        <Button
            android:id="@+id/btn_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir l'heure de fin"
            android:layout_marginTop="16dp"/>


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/radio_hourly_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarif horaire" />

            <RadioButton
                android:id="@+id/radio_daily_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarif journalier" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_reserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Réserver"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
